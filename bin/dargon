#!/usr/bin/env node
var cli = require('../lib/cli');
var program  = require('commander');

program.version('0.0.1').usage('[command] [option]')

program
	.command('init [dir]')
	.description('init application workspace')
	.option('--demo', 'include demo code')
	.action(function(dir,options){
		cli.init(dir,options);
	});


program
	.command('build [category] [name]')
	.description('build code')
    .option('--mysql', 'build code for mysql driver')
    .action(function(category, name ,options){
	    console.log(category);
	    console.log(name);
	    console.log(options.mysql);
	});
  	

program.parse(process.argv);
